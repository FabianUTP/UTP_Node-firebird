            <div class="col-md-4 text-center mb-3 mb-md-0">
              {{#if image}}
              <img src="{{image}}" alt="Foto del estudiante" class="img-thumbnail" width="180" id="imgCurrent">
              {{else}}
              <img src="/imgs/studentIcon.png" alt="Foto predeterminada" class="img-thumbnail" width="180">
              {{/if}}

              <!-- Photo Upload Form -->
              <form action="/alumnos/{{MATRICULA}}/updatePhoto" method="post" enctype="multipart/form-data"
