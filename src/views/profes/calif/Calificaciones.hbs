<section class="container">
  <!-- Sección de cabecera y botones -->
  <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap">
    <!-- Botón de regreso -->
    <button type="button" class="btn btn-custom-back" onclick="window.history.back();">
      <i class="bi bi-arrow-left"></i> Atrás
    </button>

    <!-- Botón de descarga (este será flotante abajo a la derecha) -->
    <button onclick="descargarTablaExcel()" id="botonDescargarExcel" type="button" class="btn btn-custom-download">
      <i class="bi bi-file-earmark-excel"></i> Descargar
    </button>
  </div>

  <!-- Título y datos del profesor -->
  <div id="datosProfesor" class="text-center">
    <h1 class="h4">Calificaciones</h1>
    <h5><b>Mtro:{{profe.NOMBREPROFESOR}}</b></h5>
    <h6 id="asig">Asignatura</h6>
    <h6 id="grupo">Grupo</h6>
  </div>

  <!-- Selector de evaluación -->
  <div class="mb-3">
    <label for="idPlan" class="form-label">Seleccionar evaluación:</label>
    <select id="idPlan" class="form-select form-select-sm">
      {{#each evals}}
        <option value="{{ID_EVAL}}">{{DESCRIPCION}}</option>
      {{/each}}
    </select>
  </div>

  <!-- Tabla de calificaciones -->
  <table class="table text-center">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Matrícula</th>
        <th>Calificación</th>
      </tr>
    </thead>
    <tbody id="table-content"></tbody>
  </table>

  <!-- Spinner de carga -->
  <div id="loading" class="text-center d-none">
    <div class="spinner-border text-primary" role="status"></div>
  </div>
</section>

<!-- Scripts para la exportación y carga de datos -->
<script src="/js/FileSaver.js"></script>
<script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
<script src="/js/services/profe/Exel_js/exportarExcel.js"></script>
<script src="/js/services/admin/GetCalificaciones/GetVercalificaciones_Profesor.js"></script>

