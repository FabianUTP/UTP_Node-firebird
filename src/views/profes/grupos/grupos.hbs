<section>
  <input type="hidden" id="idprofesor" value="{{CLAVEPROFESOR}}" />
  
  <!-- Botón de regreso -->
  <div class="mb-3">
    {{>btnBack}}
  </div>

  <!-- Tarjeta principal -->
  <div class="card shadow-lg border-0 rounded">
    <div class="card-body">
      <div class="card-title text-center mb-5">
        <h1 class="display-4 text-uppercase font-weight-bold">ASIGNACIÓN DE GRUPOS</h1>
        <h4 class="text-muted text-uppercase font-weight-light">MTRO. {{NOMBREPROFESOR}}</h4>
      </div>

      <!-- Campo de búsqueda oculto, opcional -->
      <div class="mb-4" style="display: none;">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="bi bi-search"></i>
            </span>
          </div>
          <input
            type="search"
            class="form-control text-uppercase"
            placeholder="BUSCAR"
            id="buscar"
          />
        </div>
      </div>

      <!-- Tabla de asignación -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead class="thead-light text-uppercase">
            <tr>
              <th>#</th>
              <th>NOMBRE CÓDIGO</th>
              <th>ASIGNATURA</th>
              <th>GRUPO</th>
            </tr>
          </thead>
          <tbody id="table-content"></tbody>
        </table>
      </div>

      <!-- Botones de paginación -->
      <div class="d-flex justify-content-between mt-4">
        <button class="btn btn-outline-primary px-4 py-2 text-uppercase" onclick="onPrev()"> 
          <i class="bi bi-chevron-left"></i> ANTERIOR 
        </button>
        <button class="btn btn-outline-primary px-4 py-2 text-uppercase" onclick="onNext()"> 
          SIGUIENTE <i class="bi bi-chevron-right"></i> 
        </button>
      </div>
    </div>
  </div>
</section>

<script src="/js/services/profe/asignaciongrp.js"></script>
