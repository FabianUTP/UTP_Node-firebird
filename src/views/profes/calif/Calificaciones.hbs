<section>
    <div class="mb-3 d-flex justify-content-between align-items-center">
        {{>btnBack}}

        <div>
            <button onclick="descargarTablaExcel()" id="botonDescargarExcel" type="button" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i>
                Descargar
            </button>
        </div>
    </div>

    <!-- Información del Profesor -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h1 class="text-center text-primary fw-bold mb-4">Calificaciones</h1>
            <h4 id="datosProfesor">Nombre del Profesor</h4>
            <h4 id="asig">Asignatura</h4>
            <h4 id="grupo">Grupo</h4>
        </div>
    </div>


    <!-- Selección de Plan de Evaluación -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <label for="idPlan" class="form-label text-primary fw-bold">
                <strong>Seleccione un Plan de Evaluación:</strong>
            </label>
            <select id="idPlan" class="form-select border-primary shadow-sm">
                {{#each evals}}
                <option value="{{ID_EVAL}}">{{DESCRIPCION}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <!-- Tabla de Calificaciones -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark text-center">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Matrícula</th>
                            <th scope="col">Calificación</th>
                        </tr>
                    </thead>
                    <tbody id="table-content" class="text-center">
                        <!-- Filas dinámicas -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Spinner de Carga -->
    <div id="loading" class="text-center my-4">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3 text-secondary">Cargando datos, por favor espere...</p>
    </div>
</section>









