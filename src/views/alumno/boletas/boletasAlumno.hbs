<section class="section profile">
  <div class="container">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <div class="mb-3">{{>btnBack}}</div>
    <div id="loading-bar">
    <div id="loading-progress"></div>
  </div>
    <div>
        <button id="btnDescargar" class="btn btn-success" onclick="print_canvas()">Descargar Calificacion</button>

    </div>
    <div id="contenido" class="card-body">
        
        <title>Calificaciones</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <head>
</head>

<body>
    <div class="card">
        <div class="card-body pt-3">
            <div class="card-title text-center">
                <h1>Calificaciones</h1>
            </div>

            <div class="tab-content pt-2">
                <div class="tab-pane fade show active profile-overview" id="doctos">
                    <section id="accesos_index" class="featured-services">
                        <div class="container" data-aos="fade-up">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="text-center">NOMBRE</th>
                                            <th scope="col" class="text-center">MATRÍCULA</th>
                                            <th scope="col" class="text-center">CARRERA</th>
                                            <th scope="col" class="text-center">CUATRIMESTRE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center">{{ NOMBRE }} {{ PATERNO }} {{ MATERNO }}</td>
                                            <td class="text-center">{{ MATRICULA }}</td>
                                            <td class="text-center">{{ carrera }}</td>
                                            <td class="text-center" id="grado">{{ GRADO }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="row">
                                <div class="col-md-8">
                                    <label for="cuatrimestre" class="form-label"><b>*Selecciona el
                                            cuatrimestre:</b></label>
                                    <select id="cuatrimestre" class="form-select" onchange="getCalifi()">
                                        <option disabled selected>Elegir cuatrimestre</option>
                                        <option value="1">Cuatrimestre 1</option>
                                        <option value="2">Cuatrimestre 2</option>
                                        <option value="3">Cuatrimestre 3</option>
                                        <option value="4">Cuatrimestre 4</option>
                                        <option value="5">Cuatrimestre 5</option>
                                        <option value="6">Cuatrimestre 6</option>
                                        <option value="7">Cuatrimestre 7</option>
                                        <option value="8">Cuatrimestre 8</option>
                                        <option value="9">Cuatrimestre 9</option>
                                        <option value="10">Cuatrimestre 10</option>
                                        <option value="11">Cuatrimestre 11</option>0
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label for="tipo_eval" class="form-label"><b>Tipo de evaluación</b></label>
                                    <select id="tipo_eval" class="form-select" onchange="getCalifi()">
                                        <option value="A" selected>Ordinario</option>
                                        <option value="B">% Asistencia</option>
                                        <option value="E">Recuperativo</option>
                                        <option value="G">Especial</option>
                                    </select>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="text-center">Asignatura</th>
                                            <th scope="col" class="text-center">Calificacion</th>
                                        </tr>
                                    </thead>
                                    <tbody id="table-content">
                                    </tbody>
                                </table>
                            </div>

                            <div class="text-center" id="loading" style="display: none;">
                                <div class="spinner-border"></div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    </div>
    <input type="hidden" value="{{ NUMEROALUMNO }}" id="numalumno">

    <script src="/js/services/alumno/getCalifiAlumno.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg=="crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script src="/js/services/alumno/getGenerarPDF.js"></script>