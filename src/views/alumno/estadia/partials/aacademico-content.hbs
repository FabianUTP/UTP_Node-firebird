<!-- Contenido de la pestaña Asesor Academico -->
<p></p>
<div class="container" style="max-width: 600px; margin: 0 auto;">
  <h3 style="text-align: center;"><strong><i class="bi bi-person-badge"></i> Datos de Asesor Académico</strong></h3>
  <div class="form-group">
    <p></p>
    <label for="selectProfesor"><i class="bi bi-person-check"></i> Seleccione Profesor:</label>
    <select class="form-select form-control" id="selectProfesor">
      <option selected>Seleccionar Profesor</option>
      {{#each nombresMaestros}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>
<p></p>
  <h4><i class="bi bi-file-text"></i> Trabajo Recepcional</h4>
  <div class="form-group">
    <label for="nombreTrabajo"><i class="bi bi-card-checklist"></i> Nombre:</label>
    <input type="text" class="form-control" id="nombreTrabajo">
  </div>

  <div class="form-group">
    <label for="fechaInicioTrabajo"><i class="bi bi-calendar"></i> Fecha Inicio:</label>
    <input type="date" class="form-control" id="fechaInicioTrabajo">
  </div>

  <div class="form-group">
    <label for="fechaFinTrabajo"><i class="bi bi-calendar"></i> Fecha Fin:</label>
    <input type="date" class="form-control" id="fechaFinTrabajo">
  </div>

  <div class="form-group">
    <label for="fechaFinTrabajo"><i class="bi bi-calendar"></i> Fecha Fin:</label>
    <input type="text" class="form-control" id="estatusTrabajo">
  </div>

  <div class="form-group">
    <label for="observacionesTrabajo"><i class="bi bi-chat-dots"></i> Observaciones:</label>
    <textarea class="form-control" id="observacionesTrabajo" rows="4"></textarea>
  </div>
  <p></p>
  <button class="btn btn-primary" id="guardar"><i class="bi bi-check"></i> Guardar</button>
  <p></p>
</div>
<p></p>

<script src="/js/services/alumno/estadia/AAcademico/guardar.js"></script>