<section>

  <div class="pb-3">
    <a href="/calificaciones/subir" class="btn btn-outline-primary">Regresar</a>
  </div>

  <div class="card">
    <div class="card-title text-center">
      <h1>Calificaciones del grupo: {{codigo_grupo}}</h1>
    </div>

    <div>
      <input type="hidden" id="codigo_grupo" value="{{codigo_grupo}}">
    </div>

    <div class="card-body">

      <div class="row">
        <div class="col-md-3">
          <label for="evaluacion" class="form-label">Evaluación</label>
          <select id="evaluacion" class="form-select">
            <option disabled selected>Seleccione la evaluacion</option>
            <option value="A">Evaluacion Ordinaria</option>
            <option value="B">% Asistencias</option>
            <option value="E">Recuperativo</option>
            <option value="G">Especial</option>
          </select>
        </div>
        
        <div class="col-md-5">
          <label for="asignatura" class="form-label">Asignatura</label>
          <select id="asignatura" class="form-select">
            <option disabled selected>Seleccione la evaluación</option>
          </select>
        </div>

        <div class="col-md-4">
          <label class="form-label">Subir</label>
          <div class="d-flex">
            <input type="file" class="form-control" id="input">
            <button class="btn btn-primary" title="Subir">
              <i class="bi bi-arrow-bar-up"></i>
            </button>
          </div>
        </div>
      </div>

      <hr>

      <div class="pt-2">
        <table class="table">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Matricula</th>
              <th>Calif. Ordinario</th>
              <th>% Asistencia</th>
            </tr>
          </thead>
          <tbody id="table-body">
          </tbody>
        </table>
      </div>

    </div>

  </div>
</section>

<script src="/js/functions/ReadExcel.js"></script>
<script src="/js/functions/setCalifi.js"></script>