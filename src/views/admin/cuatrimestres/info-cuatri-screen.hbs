<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="row pb-4">
        <div class="col">
          <a class="btn btn-outline-primary" href="/cuatrimestres" role="button">
            <i class="bi bi-arrow-left"></i>
            Regresar</a>
        </div>

        <div class="col">
          <button class="btn btn-outline-danger">
            <i class="bi bi-x-lg"></i>
            Eliminar
          </button>
        </div>
      </div>


      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Creación de cuatrimestre</h1>

          <!-- Custom Styled Validation -->
          <form class="row g-3 needs-validation" novalidate>
            <div class="col-md-4">
              <label for="validationinicial" class="form-label">Año inicial</label>
              <input 
                id="validationapellido1"
                type="text" 
                class="form-control" 
                onkeyup="javascript:this.value=this.value.toUpperCase();" 
                maxlength="4" 
                placeholder="Año inicial"
                value={{ciclo.INICIAL}}
              >
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-md-4">
              <label for="validationfinal" class="form-label">Año final</label>
              <input 
                id="validationapellido2"
                type="text" 
                class="form-control" 
                onkeyup="javascript:this.value=this.value.toUpperCase();" 
                maxlength="4" 
                placeholder="Año final"
                value="{{ciclo.FINAL}}"
              >
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-md-3">
              <label for="validationperiodo" class="form-label">Período</label>

              <select class="form-control" required>
                <option disabled selected>{{ciclo.PERIODO}}</option>
                <option value="1">SEP-DIC</option>
                <option value="2">ENERO-ABR</option>
                <option value="3">MAY-AGO</option>
                <option value="0">ASPIRANTES</option>
                <option value="4">EGRESADOS TSU</option>
                <option value="5">EGRESADOS LIC</option>
              </select>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="col-md-8">
              <label for="validationdescripcion" class="form-label">Descripción del cuatrimestre</label>
              <input 
                id="validationnombres" 
                maxlength="50"
                type="text" 
                class="form-control" 
                placeholder="Descripción del cuatrimestre" 
                value="{{ciclo.DESCRIPCION}}"
              >
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="col-md-4">
              <label for="validationcodigo" class="form-label">Código corto</label>
              <input 
                id="validationnombres"
                type="text" 
                class="form-control" 
                onkeyup="javascript:this.value=this.value.toUpperCase();" 
                maxlength="30" 
                placeholder="Código corto"
                value="{{ciclo.CODIGO_CORTO}}"
              >
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="col-6">
              <label for="inputfechainicio" class="form-label">Fecha de inicio</label>
              <div class="col-md-8" style="padding-right: 0px">
                <input 
                  id="fecha_nac_" 
                  class="form-control" 
                  {{!-- onblur="calcularEdad(this.value)"  --}}
                  name="fecha_inicio"
                  type="date"
                  value="{{ciclo.FECHA_INICIAL}}"
                  {{!-- value="2022-01-31" --}}
                >
              </div>
              <div class="col-md-4" style="padding-left: 0px">
              </div>
            </div>

            <div class="col-6">
              <label for="inputfechatermino" class="form-label">Fecha de término</label>
              <div class="col-md-8" style="padding-right: 0px">
                <input 
                  id="fecha_nac_" 
                  class="form-control" 
                  name="fecha_termino"
                  type="date">
              </div>
              <div class="col-md-4" style="padding-left: 0px">
              </div>
            </div>

            <div class="text-center py-2">
              <button class="btn btn-primary">Actualizar</button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</section>