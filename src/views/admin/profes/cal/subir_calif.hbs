<style>
  #setCalifi {
    position: absolute;
    z-index: 9;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0.5;
  }
</style>


<section class="position-relative">
  <div class="mb-3 d-flex justify-content-between">
    {{!-- {{>btnBack}} --}}

    <button type="button" class="btn btn-success">
      <i class="bi bi-file-earmark-excel"></i>
      Descargar
    </button>
  </div>

  <div id="setCalifi" class="bg-secondary d-none">
    <div class="text-center">
      <div class="spinner-border" role="status"></div>
    </div>
    <strong>Subiendo calificaciones, esto podría tardar un poco :)</strong>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="card-title text-center">
        <h1>Registro de Calificaciones</h1>
        <h4>Mtro: {{profe.NOMBREPROFESOR}}</h4>
        <h4 id="asig"> Asignatura </h4>
        <h4 id="grupo"> Grupo </h4>
      </div>

      <Form id="formCalif">

        <div class="d-grid gap-2 d-md-flex justify-content-md-between">

          <div>
            <button class="btn btn-primary">Guardar</button>
          </div>

          <div>
            <input id="input" type="file" accept=".xlsx, .xls, .csv" />
          </div>

        </div>


        <div class="py-3">
          <select id="idPlan" class="form-select">
            {{#each evals}}
            <option value="{{ID_EVAL}}">{{DESCRIPCION}}</option>
            {{/each}}

          </select>
        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Nombre</th>
              <th>Matricula</th>
              <th>Calificación</th>
            </tr>
          </thead>


          <tbody id="table-content"></tbody>
        </table>

        <div id="loading" class="text-center">
          <div class="spinner-border" role="status"></div>
        </div>

      </Form>
    </div>


  </div>
  </div>

</section>

<script src="/js/services/admin/setSubirCalificacion.js"></script>