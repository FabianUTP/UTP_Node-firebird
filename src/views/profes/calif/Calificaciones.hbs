<section class="container">
  <!-- Sección de cabecera y botones -->
  <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap">
    {{>btnBack}} <!-- Botón de regreso -->

    <button onclick="descargarTablaExcel()" id="botonDescargarExcel" type="button" class="btn btn-success btn-sm">
      <i class="bi bi-file-earmark-excel"></i> Descargar
    </button>
  </div>

  <!-- Título y datos del profesor -->
  <div id="datosProfesor" class="text-center">
    <h1 class="h4">Calificaciones</h1>
    <h5><b>Mtro:</b> {{profe.NOMBREPROFESOR}}</h5>
    <h6 id="asig">Asignatura</h6>
    <h6 id="grupo">Grupo</h6>
  </div>

  <!-- Selector de evaluación -->
  <div class="mb-3">
    <label for="idPlan" class="form-label">Seleccionar evaluación:</label>
    <select id="idPlan" class="form-select form-select-sm">
      {{#each evals}}
        <option value="{{ID_EVAL}}">{{DESCRIPCION}}</option>
      {{/each}}
    </select>
  </div>

  <!-- Tabla sin scroll lateral en móviles -->
  <table class="table text-center">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Matrícula</th>
        <th>Calificación</th>
      </tr>
    </thead>
    <tbody id="table-content"></tbody>
  </table>

  <!-- Spinner de carga -->
  <div id="loading" class="text-center d-none">
    <div class="spinner-border text-primary" role="status"></div>
  </div>
</section>

<!-- Scripts para la exportación y carga de datos -->
<script src="/js/FileSaver.js"></script>
<script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
<script src="/js/services/profe/exportarExcel.js"></script>
<script src="/js/services/admin/getVerCalificacion.js"></script>

<style>
/* Estilos generales */
body {
  font-family: 'Arial', sans-serif;
  background-color: #f8f9fa;
  padding: 10px;
  margin: 0;
}

/* Contenedor principal */
.container {
  max-width: 100%;
  padding: 10px;
}

/* Títulos */
h1, h5, h6 {
  color: #333;
  font-weight: bold;
  text-align: center;
}

/* Selector de evaluación */
.form-select {
  font-size: 14px;
  padding: 6px;
}

/* Ajustes de la tabla para ocupar toda la pantalla */
.table {
  font-size: 14px;
  width: 100%;
  margin: 0 auto;
  border-collapse: collapse;
}

/* Ajustes en móviles */
@media (max-width: 768px) {
  h1 {
    font-size: 18px;
  }
  
  h5, h6 {
    font-size: 14px;
  }

  .btn {
    font-size: 14px;
    padding: 8px;
  }

  .table {
    font-size: 12px;
  }

  th, td {
    padding: 8px;
  }
}

/* Spinner de carga */
.spinner-border {
  width: 2rem;
  height: 2rem;
}

/* Estilo de los botones */
.btn {
  border-radius: 8px;
}
</style>
