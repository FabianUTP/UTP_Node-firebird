<!-- Es la pantalla de carga -->
<style>
  #setCalifi {
    position: absolute;
    z-index: 9;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0.4;
  }
</style>
<section>
  <div onclick="return cambiosGuardados()" class="mb-3" >
    {{>btnBack}}
  </div>


<section class="position-relative">

  <div id="setCalifi" class="bg-secondary d-none">
    <div class="text-center">
      <div class="spinner-border" role="status"></div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div id="datosProfe" class="card-title">
        <h1 class="text-center">Registro de Calificaciones</h1>
        <h4>Mtro: {{profe.NOMBREPROFESOR}}</h4>
        <h4 id="asig"> Asignatura </h4>
        <h4 id="grupo"> Grupo </h4>
      </div>

      <Form id="formCalif">

        <div class="d-grid gap-2 d-md-flex justify-content-md-between align-items-end">

          <div>
            <button class="btn btn-primary">Guardar</button>
          </div>

          <div class="d-flex flex-column">
            <input id="input" type="file" accept=".xlsx, .xls, .csv"  />
            <span id="info_excel"></span>
          </div>

        </div>


        <div class="py-3">
          <select id="idPlan" class="form-select">
            {{#each evals}}
            <option value="{{ID_EVAL}}">{{DESCRIPCION}}</option>
            {{/each}}

          </select>
        </div>
  
        <table id="tablaCalificaciones" class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Nombre</th>
              <th>Matricula</th>
              <th>Calificaci√≥n</th>
            </tr>
          </thead>


          <tbody id="table-content"></tbody>
        </table>

        <div id="loading" class="text-center">
          <div class="spinner-border" role="status"></div>
        </div>

      </Form>
    </div>


  </div>
  </div>

</section>


<script src="/js/services/admin/setSubirCalificacion.js"></script>





