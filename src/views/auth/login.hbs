<div class="w-100  d-flex justify-content-center align-items-center" style="padding-top: 8%; left: 0%; position: absolute;">
    <div class="card w-100" style="max-width: 620px;">
        <div class="card-title text-center">
            <h1>Bienvenido</h1>
        </div>
        <div class="card-body px-5">

            {{>error_msj}}

            <form action="login" method="post">
                <div>
                    <label for="matricula" class="form-label">Matricula</label>
                    <input type="text" class="form-control" name="matricula" id="matricula" required>
                </div>
                <div>
                    <label for="pass" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" name="password" id="pass">
                </div>

                <div class="pt-1">
                    <a href="#">Olvidaste tu contraseña?</a>
                </div>

                <div class="pt-3 text-center">
                    <button type="submit" class="btn btn-outline-primary">Iniciar sesión</button>
                </div>

            </form>
            
        </div>
    </div>
</div>
