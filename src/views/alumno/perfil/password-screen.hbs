<section class="section profile">
  <div class="pb-3">
    {{>btnBack}}

    <!-- Mostrar mensaje de √©xito o error si existe -->
    {{#if message}}
    <div class="alert alert-success" role="alert">
      {{message}}
    </div>
    {{/if}}
  </div>

  <div class="col-xl-9 d-flex justify-content-center">
    <div class="card">
      <div class="card-header">
        <h4 class="m-0"></h4>
      </div>
      <div class="card-body pt-3">
        <!-- Bordered Tabs -->
        <ul class="nav nav-pills mb-4" id="pills-tab" role="tablist">
          <li class="nav-item">
            <button class="nav-link active me-3" data-bs-toggle="tab" data-bs-target="#datos">MY USUARIO</button>
          </li>
          <li class="nav-item">
            <button class="nav-link me-3" data-bs-toggle="tab" data-bs-target="#contacto">CAMBIAR CONTRASE√ëA</button>
          </li>
        </ul>

        <div class="tab-content pt-3">
          <!-- Datos de Identidad -->
          <div class="tab-pane fade show active profile-overview" id="datos">
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="row justify-content-center mb-3">
                  <div class="col-lg-6 col-md-8">
                    <img src="{{image}}" alt="foto" class="img-fluid profile-image" width="250">
                  </div>
                </div>
                <div class="profile-info">
                  <div class="row mb-3">
                    <div class="col-lg-3 col-md-4 label">NOMBRE</div>
                    <div class="col-lg-9 col-md-8">{{NOMBRE}}</div>
                  </div>
                  <div class="row mb-3">
                    <div class="col-lg-3 col-md-4 label">MATRICULA</div>
                    <div class="col-lg-9 col-md-8">{{MATRICULA}}</div>
                  </div>
                  <div class="row mb-3">
                    <div class="col-lg-3 col-md-4 label">NIVEL</div>
                    <div class="col-lg-9 col-md-8">{{NIVEL}}</div>
                  </div>
                </div>
              </div>
              <!-- Espacio vac√≠o a la derecha -->
              <div class="col-md-6"></div>
            </div>
          </div>

          <!-- Cambiar Contrase√±a -->
          <div class="tab-pane fade pt-3" id="contacto">
            <form method="post" action="/passworddata/update-contactos">
              <div class="row mb-3">
                <label for="alumno_password" class="col-md-4 col-lg-3 col-form-label">Contrase√±a</label>
                <div class="col-md-8 col-lg-9">
                  <div class="input-group">
                    <input name="alumno_password" type="password" class="form-control" id="alumno_password" value="{{ALUMNO_PASSWORD}}" required />
                    <button class="btn btn-outline-secondary btn-sm" type="button" id="togglePassword">üëÅ</button>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <button class="btn btn-outline-primary btn-sm" type="submit">Guardar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById('togglePassword').addEventListener('click', function () {
    const passwordField = document.getElementById('alumno_password');
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
    } else {
      passwordField.type = 'password';
    }
  });
</script>

<script src="/js/services/Perfil_Screen.js"></script>

