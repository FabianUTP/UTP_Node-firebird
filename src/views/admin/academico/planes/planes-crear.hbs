<section>
  <div class="mb-3">
    {{>btnBack}}
  </div>

  <div class="card">
    <div class="card-body">
      <div class="card-title text-center">
        <h1>Crear Nuevo Plan De Estudio</h1>
      </div>

      <form action="" method="post">
        <div class="row g-4">
          <div class="col-md-4">
            <label for="clave" class="form-label">Clave de plan</label>
            <input required placeholder="id clave" type="text" name="id_clave" class="form-control" />
          </div>

          <div class="col-md-4">
            <label for="name" class="form-label">Nombre de plan</label>
            <input required placeholder="id nombre" type="text" name="id_plan" class="form-control" />
          </div>

          <div class="col-md-4">
            <label for="nivel" class="form-label" name="id_nivel" placeholder="id_nivel">Nivel</label>
            <select class="form-select">
              <option selected disabled>Seleccione un nivel</option>
              <option value="null">Ninguno</option>
              {{#each niveles}}
              <option value="{{NIVEL}}">{{DESCRIPCION}}</option>
              {{/each}}
            </select>
            </select>
          </div>

          <div class="col-md-4">
            <label for="name" class="form-label">Calif. Mínima</label>
            <input required placeholder="calificacion minima" type="text" name="calif_min" class="form-control" />
          </div>

          <div class="col-md-4">
            <label for="name" class="form-label">Calif. Máxima</label>
            <input required placeholder="calificacion maxima" type="text" name="calif_max" class="form-control" />
          </div>

          <div class="col-md-4">
            <label for="name" class="form-label">Mínima Aprobatoria</label>
            <input required placeholder="minima aprobatoria" type="text" name="min_aprobatoria" class="form-control" />
          </div>

          <div class="radio">
            <label for="name" class="form-label">Calcular Promedio</label>
            <input type="radio" name="opciones" id="opciones_1" value="opcion_1" checked />
            Si
            <input type="radio" name="opciones" id="opciones_2" value="opcion_2" />
            No

          </div>

        </div>

      </form>

      <div class="mt-3">
        <button class="btn btn-outline-primary"> Guardar </button>
      </div>
    </div>
  </div>

</section>