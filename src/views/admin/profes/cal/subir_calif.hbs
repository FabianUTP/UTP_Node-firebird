<section>
  <div class="mb-3">
    {{>btnBack}} 
  </div>

  <div class="card">
    <div class="card-body">
      <div class="card-title">
        <h1 class="text-center">Calificaciones</h1>
        <h4><b style="color: #000000">Mtro: </b>{{profe.NOMBREPROFESOR}} </h4>
        <h4 id="asig"> Asignatura </h4>
        <h4 id="grupo"> Grupo </h4>
      </div>
     <div class="mt-3">
          <button class="btn btn-outline-primary"> Guardar </button>
        </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="button" class="btn btn-success">
          <i class="bi bi-file-earmark-excel"></i>
          Descargar
        </button>
        <button type="button" class="btn btn-success">
          <i class="bi bi-file-earmark-excel-fill"></i>
          Subir
        </button>
      </div>

      <select id="idPlan" class="form-select">
        {{#each evals}}
          <option value="{{ID_EVAL}}">{{DESCRIPCION}}</option>
        {{/each}}

      </select>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Matricula</th>
            <th>Calificaci√≥n</th>
          </tr>
        </thead>

        <tbody id="table-content"></tbody>
      </table>
      <div id="loading" class="text-center">
        <div class="spinner-border" role="status"></div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <button
      class="btn btn-outline-primary"
      type="button"
      id="btn_act"
    >Habilitar</button>
    <button
      class="btn btn-outline-primary d-none" 
      type="submit" 
      id="btn_update"
    >Editar</button>
  </div>

</section>

<script src="/js/services/admin/setSubirCalificacion.js"></script>