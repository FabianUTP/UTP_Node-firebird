<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">

  <div class="d-flex align-items-center justify-content-between">
    <a href="/" class="logo d-flex align-items-center">
      <img src="assets/img/logo.png" alt="">
      <span class="d-none d-lg-block">SII-UTPoniente</span>
    </a>
    <i class="bi bi-list toggle-sidebar-btn"></i>
  </div><!-- End Logo -->

  {{!-- Si es admin, muestra la seleccion del periodo --}}
  {{#if isAdmin}}
  <div class="col-md-3">
    <select id="selectciclo" class="form-select">
    </select>
  </div>

  <script src="/js/services/admin/getCuatrimestresNavbar.js" async></script>

  <div class="search-bar">
    <form class="search-form d-flex align-items-center" action="/alumnos" method="get">
      <input type="text" name="search" placeholder="Buscar alumno" title="Enter search keyword" autocomplete="off">
      <button type="submit" title="Search"><i class="bi bi-search"></i></button>
    </form>
  </div><!-- End Search Bar -->

  {{/if}}


  <nav class="header-nav ms-auto">
    <ul class="d-flex align-items-center">

      {{#if isAdmin}}
      <li class="nav-item d-block d-lg-none">
        <a class="nav-link nav-icon search-bar-toggle " href="#">
          <i class="bi bi-search"></i>
        </a>
      </li><!-- End Search Icon-->
      {{/if}}

      <li class="nav-item dropdown pe-3">

        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
          <span class="d-none d-md-block dropdown-toggle ps-2">{{ nameAuth }}</span>
        </a><!-- End Profile Iamge Icon -->

        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">

          <li class="dropdown-header">
            <h6>{{ nameAuth }} {{ lastNameAuth }}</h6>
            {{#if IDAuth}}
            <span>Matrícula: {{ IDAuth }}</span>
            {{/if}}
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
            <a class="dropdown-item d-flex align-items-center" href="/logout"></method=>
              <i class="bi bi-box-arrow-right"></i>
              <span>Cerrar sesión</span>
            </a>
          </li>

        </ul><!-- End Profile Dropdown Items -->
      </li><!-- End Profile Nav -->

    </ul>
  </nav><!-- End Icons Navigation -->

</header><!-- End Header -->